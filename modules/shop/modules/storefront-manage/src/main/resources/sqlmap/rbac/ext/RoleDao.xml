<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.storefront.manage.dao.rbac.RoleDao">

    <resultMap id="RoleMap" type="com.storefront.manage.model.vo.RoleVo" >
        <result column="id" property="id" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="code" property="code" jdbcType="VARCHAR" />
        <result column="note" property="note" jdbcType="VARCHAR" />
    </resultMap>

    <select id="queryPage" resultMap="RoleMap">
        select id,name,code,note
        from role
        <where>
            <if test="name != null and name != ''">
                name like concat(#{name}, '%')
            </if>
            <if test="code != null and code != ''">
                and code =#{code}
            </if>
        </where>
        order by id desc
    </select>

    <select id="queryByUserId" parameterType="long" resultMap="RoleMap">
        select r.id,r.name,r.code,r.note
        from  role r
        join user_role ur on r.id=ur.role_id
        where ur.user_id=#{userId}
    </select>

</mapper>