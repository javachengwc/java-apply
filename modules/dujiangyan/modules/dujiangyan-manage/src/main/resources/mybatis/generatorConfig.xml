            <property name="enableSubPackages" value="true"/>

        </sqlMapGenerator>

        <javaClientGenerator type="MIXEDMAPPER" targetPackage="com.djy.manage.dao.mapper"

                             targetProject="F:\workproject\java-apply\modules\dujiangyan\modules\dujiangyan-manage\src\main\java">

            <property name="enableSubPackages" value="true"/>

        </javaClientGenerator>


        <!-- 添加需要生成的表，以及生成方式 -->
