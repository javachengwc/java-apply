        <sqlMapGenerator targetPackage="mybatis.sqlmap"

                         targetProject="F:\workproject\java-application\modules\webapp\modules\manageplat\src\main\resources">

            <property name="enableSubPackages" value="true"/>

        </sqlMapGenerator>

        <javaClientGenerator type="MIXEDMAPPER" targetPackage="com.manageplat.model.mapper"

                             targetProject="F:\workproject\java-application\modules\webapp\modules\manageplat\src\main\java">

